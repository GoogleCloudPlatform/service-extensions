# No JWT set, forbidden request.
test {
  name: "NoJwt"
  request_headers {
    input {
      header { key: ":path" value: "https://www.sample.com" }
    }
    result { 
      immediate { http_status: 403 details: "" }
      body { exact: "Access forbidden - missing token.\n" }
      log { regex: ".+Access forbidden - missing token.$" }
    }
  }
}
# invalid token, forbidden request.
test {
  name: "InvalidJwt"
  request_headers {
    input {
      header { key: ":path" value: "https://www.sample.com?jwt=ddssdsds.ddfdffd.dsssd" }
